.panel.panel-default
  .panel-heading
    %h4 プロフィールの編集
  .panel-body
    = simple_form_for(@user, url: {action: :update}) do |f|
      = f.error_notification

      = f.input :name
      = f.input :email
      = f.input :aboutme, as: :text, input_html: {rows: 10, class: 'textarea'}

      .form-actions
        = f.button :submit, '登録する', {class: 'btn btn-primary'}

    = link_to 'ダッシュボードに戻る', mypage_users_path
